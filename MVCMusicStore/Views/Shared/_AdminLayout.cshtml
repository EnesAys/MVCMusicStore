<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/AdminCss")
    @RenderSection("styles", required: false)
    <!--[if lte IE 7]>
            <link rel="stylesheet" href="resources/css/ie.css" type="text/css" media="screen" />
        <![endif]-->
</head>
<body>
    <div id="body-wrapper">
        <!-- Wrapper for the radial gradient background -->
        <div id="sidebar">
            <div id="sidebar-wrapper">
                <!-- Sidebar with logo and menu -->
                <h1 id="sidebar-title">
                    <a href="#">Simpla Admin</a></h1>
                <!-- Logo (221px wide) -->
                <a href="#">
                    <img id="logo" src='@Url.Content("~/Content/resources/images/logo.png")' alt="Simpla Admin logo" /></a>
                <!-- Sidebar Profile links -->
                <div id="profile-links">
                    Hello, <a href="#" title="Edit your profile">@HttpContext.Current.User.Identity.Name</a><br />
                    <br />
                    <a href='@Url.Action("Index", "Home")' title="View the Site">Back to Site</a> | <a href='@Url.Action("Logout", "Account")' title="Sign Out">Sign
                        Out</a>
                </div>
                <ul id="main-nav">
                    <li><a id="admin" href='@Url.Action("Index", "Admin")' class="nav-top-item no-submenu">Dashboard</a></li>
                    <li><a id="genre" href='@Url.Action("Index", "GenreManager")' class="nav-top-item no-submenu">Manage Genres</a></li>
                    <li><a id="artist" href='@Url.Action("Index", "ArtistManager")' class="nav-top-item no-submenu">Manage Artists</a></li>
                    <li><a id="album" href='@Url.Action("Index", "AlbumManager")' class="nav-top-item no-submenu">Manage Albums</a></li>
                    <li><a id="order" href='@Url.Action("Index", "OrderManager")' class="nav-top-item no-submenu">Manage Orders</a></li>
                    <li><a id="user" href='@Url.Action("Index", "UserManager")' class="nav-top-item no-submenu">Manage Users</a></li>
                </ul>
                <div id="messages" style="display: none">
                    <h3>3 Messages</h3>
                    <p>
                        <strong>17th May 2009</strong> by Admin<br />
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vivamus magna. Cras in
                        mi at felis aliquet congue. <small><a href="#" class="remove-link" title="Remove message">Remove</a></small>
                    </p>
                    <p>
                        <strong>2nd May 2009</strong> by Enes  Aysan<br />
                        Ut a est eget ligula molestie gravida. Curabitur massa. Donec eleifend, libero at
                        sagittis mollis, tellus est malesuada tellus, at luctus turpis elit sit amet quam.
                        Vivamus pretium ornare est. <small><a href="#" class="remove-link" title="Remove message">Remove</a></small>
                    </p>
                    <p>
                        <strong>25th April 2009</strong> by Admin<br />
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vivamus magna. Cras in
                        mi at felis aliquet congue. <small><a href="#" class="remove-link" title="Remove message">Remove</a></small>
                    </p>
                    <form action="" method="post">
                        <h4>New Message</h4>
                        <fieldset>
                            <textarea class="textarea" name="textfield" cols="79" rows="5"></textarea>
                        </fieldset>
                        <fieldset>
                            <select name="dropdown" class="small-input">
                                <option value="option1">Send to...</option>
                                <option value="option2">Everyone</option>
                                <option value="option3">Admin</option>
                                <option value="option4">Jane Doe</option>
                            </select>
                            <input class="button" type="submit" value="Send" />
                        </fieldset>
                    </form>
                </div>
                <!-- End #messages -->
            </div>
        </div>
        <!-- End #sidebar -->
        <div id="main-content">
            <!-- Main Content Section with everything -->
            <noscript>
                <!-- Show a notification if the user has disabled javascript -->
                <div class="notification error png_bg">
                    <div>
                        Javascript is disabled or is not supported by your browser. Please <a href="http://browsehappy.com/"
                            title="Upgrade to a better browser">upgrade</a> your browser or <a href="http://www.google.com/support/bin/answer.py?answer=23852"
                                title="Enable Javascript in your browser">enable</a> Javascript to navigate
                        the interface properly.
                    </div>
                </div>
            </noscript>
            <!-- Page Head -->
            <h2>Welcome @HttpContext.Current.User.Identity.Name</h2>
            <p id="page-intro">
                What would you like to do?
            </p>
            <ul class="shortcut-buttons-set">
                <li><a class="shortcut-button" href='@Url.Action("Index", "GenreManager")'><span>
                    <img src='@Url.Content("~/Content/resources/images/icons/genres.png")' alt="icon" /><br />
                    Genres</span></a></li>
                <li><a class="shortcut-button" href='@Url.Action("Index", "ArtistManager")'><span>
                    <img src='@Url.Content("~/Content/resources/images/icons/artists.png")' alt="icon" /><br />
                    Artists</span></a></li>
                <li><a class="shortcut-button" href='@Url.Action("Index", "AlbumManager")'><span>
                    <img src='@Url.Content("~/Content/resources/images/icons/albums.png")' alt="icon" /><br />
                    Albums</span></a></li>
                <li><a class="shortcut-button" href='@Url.Action("Index", "OrderManager")'><span>
                    <img src='@Url.Content("~/Content/resources/images/icons/orders.png")' alt="icon" /><br />
                    Orders</span></a></li>
                <li><a class="shortcut-button" href='@Url.Action("Index", "UserManager")' rel="modal"><span>
                    <img src='@Url.Content("~/Content/resources/images/icons/users.png")' alt="icon" /><br />
                    Users</span></a></li>
            </ul>
            <!-- End .shortcut-buttons-set -->
            <div class="clear">
            </div>
            <div class="content-box">
                @RenderBody()

            </div>

            <div id="footer">
                <small>
                    <!-- Remove this notice or replace it with whatever you want -->
                    &#169; Copyright 2009 Your Company | Powered by <a href="http://themeforest.net/item/simpla-admin-flexible-user-friendly-admin-skin/46073">Simpla Admin</a> | <a href="#">Top</a> </small>
            </div>
            <!-- End #footer -->
        </div>
        <!-- End #main-content -->
        @Scripts.Render("~/bundles/jquery")
        <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
        @RenderSection("scripts", required: false)
        @Scripts.Render("~/bundles/AdminJs")
    </div>
</body>
</html>
