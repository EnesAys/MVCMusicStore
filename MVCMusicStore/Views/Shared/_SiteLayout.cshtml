<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/SiteCss")
    @RenderSection("styles", required: false)
</head>
<body>
    <div id="header">
        <h1>@MVCMusicStore.Views.Resources.SiteTitle</h1>
        <ul id="navlist">
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li>@Html.ActionLink("Store", "Index", "Store")</li>
            <li>@Html.Action("_CartButton", "Cart")</li>
            @Html.Partial("_LoginPartial")
        </ul>
    </div>
    <div id="leftMenu">
        @Html.Action("_GenrePartial", "Home")
        <div>
            <a href='@Url.Action("SetLanguage", "Home", new {language = "tr-TR" })' title="Turkce">
                <img src='@Url.Content("~/Content/turkish.png")' alt="Turkce"  /></a>&nbsp;&nbsp;&nbsp;<a href='@Url.Action("SetLanguage", "Home", new {language = "en-US" })' title="English">
                <img src='@Url.Content("~/Content/english.png")' alt="English"  /></a>
        </div>
    </div>
    <div id="main">
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
